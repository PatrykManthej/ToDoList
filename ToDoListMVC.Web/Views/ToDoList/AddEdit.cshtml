@model ToDoListMVC.Application.ViewModels.ToDoList.ToDoListVm

@{
    ViewData["Title"] = "AddEditList";
}
<h4>@ViewData["Header"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEdit" asp-controller="ToDoList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" asp-controller="ToDoList" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}